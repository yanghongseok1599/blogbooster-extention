{
  "manifest_version": 3,
  "name": "블로그 부스터 Pro",
  "version": "2.0.0",
  "description": "네이버 블로그 올인원 도우미 - SEO 분석, 벤치마킹, AI 글 생성, 글자수 카운터, 뽀모도로 타이머",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "sidePanel",
    "scripting",
    "webNavigation",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "https://*.naver.com/*",
    "https://blog.naver.com/*",
    "https://m.blog.naver.com/*",
    "https://*.pstatic.net/*",
    "https://postfiles.pstatic.net/*",
    "https://blogfiles.pstatic.net/*",
    "https://mblogthumb-phinf.pstatic.net/*",
    "https://blogpfthumb-phinf.pstatic.net/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*.firebaseapp.com/*",
    "https://*.googleapis.com/*",
    "https://*.firebaseio.com/*",
    "https://*.youtube.com/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "블로그 부스터 Pro"
  },
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.naver.com/*", "https://blog.naver.com/*", "https://m.blog.naver.com/*"],
      "js": [
        "lib/html2canvas.min.js",
        "lib/nlp-utils.js",
        "lib/naver-seo-analyzer.js",
        "content/extractor.js",
        "content/analyzer.js",
        "content/blog-helper.js",
        "content/editor-injector.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["auth/*", "lib/*", "admin/*", "mypage/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
